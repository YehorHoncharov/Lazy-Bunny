model Movie {
    id            Int       @id @default(autoincrement())
    Name          String
    ReleaseDate   String
    Year          Int
    Country       String
    Director      String
    Duration      String
    Screenwriter  String
    Description   String
    Language      String
    FilmCompany   String
    Img           String
    Rating        Int
    Baner         String
    Mood          String
    Url           String
    Actors        MovieToActor[]
    Comments      Comment[]
    Genres        Relation[]
    favoritedBy   User[]    @relation("FavoriteMovies")
    Moments       Moment[]
}